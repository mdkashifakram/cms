# ===========================================
# CMS Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For MySQL (current):
DB_USERNAME=root
DB_PASSWORD=your_secure_database_password_here

# For PostgreSQL (Phase 3 migration):
# Uncomment these and set SPRING_PROFILE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=clinic_management
# DB_USERNAME=postgres
# DB_PASSWORD=your_postgres_password_here

# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET=your_64_byte_base64_encoded_secret_here

# Email Configuration
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_TRIAL_NUMBER=+1234567890

# SSL/HTTPS (for production)
# SSL_ENABLED=true
KEYSTORE_PASSWORD=your_keystore_password

# Cookie Security (set to true when SSL is enabled)
COOKIE_SECURE=false

# CORS (for production, use your actual domain)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Bootstrap Admin (change immediately after first login)
BOOTSTRAP_ADMIN_PASSWORD=ChangeThisImmediately123!
ALLOW_BOOTSTRAP_ADMIN=true

# Logging
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN

# Profile: dev, postgres, or prod
# Use 'postgres' to switch to PostgreSQL database
SPRING_PROFILE=dev

# Server
SERVER_PORT=8080
